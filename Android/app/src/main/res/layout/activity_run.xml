<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_bg">


    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_run_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/btn_green.status_menu"
            android:text="开始"/>

        <TextView
            android:id="@+id/textView_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:text="@string/run_distance"
            android:layout_below="@+id/button_run_start"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:text="@string/run_speed"
            android:layout_below="@+id/textView_distance" />
        <Chronometer
            android:id="@+id/chronometer_run_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/textView_distance"
            android:layout_alignRight="@+id/button_run_start"
            android:layout_alignEnd="@+id/button_run_start" />


    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true" />


</LinearLayout>